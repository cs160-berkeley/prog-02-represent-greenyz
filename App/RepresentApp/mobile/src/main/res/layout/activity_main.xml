<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/zip_input"
            android:inputType="number"
            android:hint="e.g. 94704"
            android:editable="true"
            android:layout_alignBottom="@+id/zip_button"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter your zip code:"
            android:id="@+id/textView2"
            android:textSize="32dp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OR"
            android:id="@+id/textView3"
            android:textSize="24dp"
            android:padding="50dp"
            android:layout_below="@+id/zip_input"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Your Current Location"
            android:id="@+id/location_button"
            android:textColor="#000000"
            android:width="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="22dp"
            android:height="60dp"
            android:background="#a0ff0000"
            android:fontFamily="sans-serif" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/zip_button"
            android:textColor="#000000"
            android:width="@dimen/activity_horizontal_margin"
            android:textSize="20dp"
            android:height="30dp"
            android:layout_marginLeft="20dp"
            android:background="#c81274ff"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textView2"
            android:layout_toEndOf="@+id/zip_input" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Represent!"
            android:id="@+id/textView"
            android:textSize="70dp"
            android:fontFamily="sans-serif-thin"
            android:paddingTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="40dp" />

    </RelativeLayout>

</RelativeLayout>
